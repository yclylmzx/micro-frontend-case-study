{
  "name": "dashboard-microfrontends",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:user-card": "npm -w user-card run dev",
    "dev:content-bar": "npm -w content-bar run dev",
    "dev:shell": "npm -w shell run dev",
    "start:all": "concurrently \"npm run dev:user-card\" \"npm run dev:content-bar\" \"npm run dev:shell\""
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
